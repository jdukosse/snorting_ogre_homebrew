    <!--Missive-->
    <element name="Missive" type="Spell" source="Snorting Ogre Homebrew" id="ID_SO_SPELL_MISSIVE">
		<supports>Psionic</supports>
		<requirements>ID_SO_FEAT_PSIONIC_INITIATE</requirements>
		<description>
			<p>You send a telepathic message to a single living creature within range. If you do not share a common language, the subject "hears" meaningless mental syllables. If the creature has also psionic abilities it can answer.</p>
            <p><strong>Point Cost:</strong> 1</p>
			<p class="indent"><b><i>Augment.</i></b> For every 1 additional power point you spend you can target another creature.</p>
        </description>
		<setters>
			<set name="keywords">telepathy, communication</set>
			<set name="level">1</set>
			<set name="school">Psionic</set>
			<set name="time">1 bonus action</set>
			<set name="duration">Instantaneous</set>
			<set name="range">60 feet</set>
