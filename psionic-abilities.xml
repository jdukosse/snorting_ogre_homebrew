    <!--Psionic Initiate Feat-->
    <element name="Psionic Initiate" type="Feat" source="Snorting Ogre Homebrew" id="ID_SO_FEAT_PSIONIC_INITIATE">
		<supports>Psionic</supports>
		<description>
			<p>The parasite living in your brain has granted you limited access to psionic abilities.</p>
            <p>You gain a number of psionic Power Points equal to your proficiency bonus + your Intelligence, Wisdom, or Charisma modifier (choose when you select this feat) modifier. You can spend these points to manifest psionic powers that you know.</p>
		</description>
        <sheet display="false" />
		<rules>
			<grant type="Grants" id="ID_INTERNAL_GRANT_MULTICLASS_SPELLCASTING_SLOTS_SOLO"/>
			<select type="Feat Feature" name="Psionic Ability (Psionic Initiate)" supports="Psionic Initiate Power Ability" />
		</rules>
	</element>
    <element name="Intelligence" type="Feat Feature" source="Snorting Ogre Homebrew" id="ID_SO_FEAT_PSIONIC_INITIATE_INTELLIGENCE">
		<compendium display="false" />
		<supports>Psionic Initiate Power Ability</supports>
		<description>
			<p>Your governing ability for your psionic powers is Intelligence. You gain Power Points equal to your Proficiency Bonus plus your Intelligence modifier</p>
		</description>
		<sheet alt="Psionic Initiate">
			<description>
				<p>The parasite living in your brain has granted you limited access to psionic abilities.</p>
				<p class="indent"><b><i>Power Points:</i></b> {{power_points}}</p>
			</description>
		</sheet>
		<spellcasting name="Psionic" ability="Intelligence" allowReplace="true">
			<list>Psionic</list>
		</spellcasting>
		<rules>
			<stat name="power_points" value="proficiency" bonus="power_points"/>
			<stat name="power_points" value="intelligence:modifier" />
			<stat name="psionic:spellcasting:slots:1" value="power_points" />
			<select type="Spell" name="Minor Power (Psionic Initiate)" supports="$(spellcasting:list),1" number="2" spellcasting="Psionic" />
		</rules>
	</element>
