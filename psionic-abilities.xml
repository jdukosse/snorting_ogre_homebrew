    <element name="Psionic Initiate" type="Item" source="Snorting Ogre Homebrew" id="ID_SO_ITEM_PSIONIC_INITIATE">
		<compendium display="false" />
		<description>
			<p><i>You can equip this item to “enable” it. It remains hidden from the inventory on your character sheet.</i></p>
			<div class="reference">
				<div element="ID_SO_FEAT_PSIONIC_INITIATE" />
			</div>
		</description>
		<setters>
			<set name="category">Psionic Abilities</set>
			<set name="keywords">psionic, feat</set>
			<set name="slot">misc</set>
			<set name="inventory-hidden">true</set>
		</setters>
		<rules>
