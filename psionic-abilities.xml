    <!--Psionic Blast-->
    <element name="Psionic Blast" type="Spell" source="Snorting Ogre Homebrew" id="ID_SO_SPELL_PSIONIC_BLAST">
		<supports>Psionic, Spell Saving Throw</supports>
		<requirements>ID_SO_FEAT_PSIONIC_INITIATE</requirements>
		<description>
			<p>The air ripples with the force of your mental attack, which blasts the minds of all creatures in range. Creatures in the blast must make a Wisdom save or be stunned until the end of your next round.</p>
            <p><strong>Point Cost:</strong> 2</p>
			<p class="indent"><b><i>Augment.</i></b> For every 2 additional power points you spend the cone's range increases by 10 feet.</p>
        </description>
		<setters>
			<set name="keywords">mental, stunning</set>
			<set name="level">1</set>
			<set name="school">Psionic</set>
			<set name="time">1 bonus action</set>
			<set name="duration">Instantaneous</set>
			<set name="range">Self (30-foot cone)</set>
			<set name="hasVerbalComponent">false</set>
			<set name="hasSomaticComponent">false</set>
			<set name="hasMaterialComponent">false</set>
			<set name="materialComponent" />
			<set name="isConcentration">false</set>
			<set name="isRitual">false</set>
