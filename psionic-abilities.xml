    <!--Energy Push-->
    <element name="Energy Push" type="Spell" source="Snorting Ogre Homebrew" id="ID_SO_SPELL_ENERGY_PUSH">
		<supports>Psionic, Spell Attack</supports>
		<requirements>ID_SO_FEAT_PSIONIC_INITIATE</requirements>
		<description>
			<p>You project a solid blast of energy of the chosen type at a target, dealing it 2d6 points of damage and push the target 10 feet back.</p>
            <p><strong>Point Cost:</strong> 2</p>
			<p class="indent"><b><i>Augment.</i></b> For every 2 additional power points you spend, this power's damage increases by one die (d6) and the target is pushed an additional 5 feet back.</p>
        </description>
		<setters>
			<set name="keywords">damage, force</set>
			<set name="level">1</set>
			<set name="school">Psionic</set>
			<set name="time">1 action</set>
			<set name="duration">Instantaneous</set>
			<set name="range">60 feet</set>
			<set name="hasVerbalComponent">false</set>
